<style type="text/css">
    .l-table-edit {font-size:14px;border: 1px solid #ccc;width:620px;}
    .l-table-edit-td{ padding:4px;height:28px; border: 1px solid #ccc;}
    .l-verify-tip{ left:230px; top:120px;}
    .l-table-edit th,l-table-edit td{padding:4px;}
    .l-table-edit th{text-align:center;color:#000;}
    .l-table-edit .query-th th{cursor:pointer;}
    .l-table-edit .query-th{border-top:1px solid #c6c6c6;border-bottom:1px solid #c6c6c6;background:url(@Html.RootPath()/content/images/data-table-th.png) repeat-x;height:19px;}
    .l-table-edit th{border-left:1px solid #ddd;border-right:1px solid #ddd;color:#445055;font-weight:bold;text-align:center;}
    img{vertical-align:middle;}
    .txtbox{margin: 0px 5px 0px 5px}
</style>
<div>
    <div style="margin-top: 10px" class="data-tab">
        <ul>
            <li class="on" id="liBaseInfo"><a href="javascript:void(0);">基本属性</a></li>
            <li class="next" id="liTranstionSet"><a href="javascript:void(0);">流转设置</a></li>
            <li class="next" id="liOtherSet"><a href="javascript:void(0);">其他设置</a></li>
        </ul>
    </div>
    <div id="divBaseInfo" style="margin: 5px;">
        <table cellpadding="0" cellspacing="0" class="l-table-edit">
            <tr>
                <td align="right" class="l-table-edit-td" style="width: 100px;">
                    状态名称：
                </td>
                <td align="left" class="l-table-edit-td">
                    <input class="text" name="StatusName" id="txtStatusName" type="text" />
                </td>
            </tr>
            <tr>
                <td align="right" class="l-table-edit-td" style="width: 170px">
                    作者界面显示状态名称：
                </td>
                <td align="left" class="l-table-edit-td">
                    <input class="text" name="DisplayName" id="txtDisplayName" value="审核中" type="text" />
                </td>
            </tr>
            <tr>
                <td align="right" class="l-table-edit-td">
                    所属分组：
                </td>
                <td align="left" class="l-table-edit-td">@Html.Raw(Html.SelectAllRole("selRoleList", "158px", "", "", ""))
                </td>
            </tr>
            <tr>
                <td align="right" class="l-table-edit-td">
                    响应分组：
                </td>
                <td align="left" class="l-table-edit-td">@Html.Raw(Html.SelectAllRole("selActionRoleList", "158px", "", "", ""))
                </td>
            </tr>
            <tr>
                <td align="right" class="l-table-edit-td">
                    对应稿件状态：
                </td>
                <td align="left" class="l-table-edit-td">
                    <select id="selCStatus" style="width: 158px;">
                        <option value="0">-请选择-</option>
                        <option value="-3">退修</option>
                        <option value="100">已发校样</option>
                        <option value="200">确定录用</option>
                        <option value="300">已刊出</option>
                        <option value="-100">退稿</option>
                        <option value="888">专家已审</option>
                        <option value="889">专家已复审</option>

                        <option value="886">英文专家已审</option>
                        <option value="887">英文专家已复审</option>

                        <option value="-888">部分专家已审</option>
                        <option value="999">专家拒审</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td align="right" class="l-table-edit-td">
                    排序值：
                </td>
                <td align="left" class="l-table-edit-td">
                    <input class="text" name="SortID" id="txtSortID" value="0" type="text" style="width: 50px;" />
                </td>
            </tr>
        </table>
    </div>
    <div id="divTranstionSet" style="margin: 5px; display: none;">
        <table cellpadding="0" cellspacing="0" class="l-table-edit">
            <tr style="display: none;">
                <td align="right" class="l-table-edit-td">
                    回退选项：
                </td>
                <td align="left" class="l-table-edit-td">
                    是否允许回退：<select id="selIsAllowBack" name="IsAllowBack"><option value="0">不允许</option>
                        <option value="1">允许回退上一步骤</option>
                        <option value="2">允许回退之前步骤</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td align="right" class="l-table-edit-td" rowspan="2">
                    多人处理步骤：
                </td>
                <td align="left" class="l-table-edit-td">
                    是否是多人处理步骤：<select id="selIsMultiPerson" name="IsMultiPerson"><option value="0">不是</option>
                        <option value="1">是</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td align="left" class="l-table-edit-td" style="width: 380px;">
                    处理方式：<select id="selMultiPattern" name="MultiPattern"><option value="1">所有人处理后才流转到下一个步骤</option>
                        <option value="2">一个人处理后即可流转到下一个步骤</option>
                    </select>
                </td>
            </tr>
        </table>
    </div>
    <div id="divOtherSet" style="margin: 5px; display: none;">
        <table cellpadding="0" cellspacing="0" class="l-table-edit">
            <tr>
                <td align="right" class="l-table-edit-td" style="width: 100px;">
                    办理时限：
                </td>
                <td align="left" class="l-table-edit-td" style="width: 380px;">
                    <input type="text" class="txtbox" value="5" id="txtTimeoutDay" name="TimeoutDay" />天
                </td>
            </tr>
            <tr>
                <td align="right" class="l-table-edit-td">
                    超时计算方法：
                </td>
                <td align="left" class="l-table-edit-td">
                    <input type="radio" name="TimeoutPattern" value="1" />送审之后催&nbsp;<input type="radio"
                        name="TimeoutPattern" value="2" checked />到审毕日期之后催 &nbsp;<a href="javascript:void(0)"
                            title="送审之后催是送给审核人员之后即开始计时。<br/>到审毕日期之后催是送审之后到预计审毕日期还未回后即开始计时。" id="aTip">说明</a>
                </td>
            </tr>
            <tr>
                <td align="right" class="l-table-edit-td">
                    超时提醒：
                </td>
                <td align="left" class="l-table-edit-td">
                    <input type="checkbox" name="IsSMSRemind" id="chbIsSMSRemind" />&nbsp;<img src="@Html.GetIcons("mobile_sms.gif")" alt="手机提醒" title="手机提醒" />&nbsp;&nbsp;&nbsp;&nbsp;<input
                        type="checkbox" name="IsEmailRemind" id="chbIsEmailRemind" />&nbsp;<img src="@Html.GetIcons("webmail.gif")" alt="邮件提醒" title="邮件提醒" />&nbsp;每隔<input
                            type="text" class="txtbox" value="2" style="width: 50px;" id="txtRangeDay" />天；共提醒<input
                                type="text" style="width: 50px;" class="txtbox" id="txtRemindCount" value="3" />次
                </td>
            </tr>
            <tr>
                <td align="right" class="l-table-edit-td">
                    是否撤稿：
                </td>
                <td align="left" class="l-table-edit-td">
                    提醒完成后是否撤稿：<input type="checkbox" name="IsRetraction" id="chbIsRetraction" />
                </td>
            </tr>
        </table>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        var RootPath = '@Html.RootPath()';
    </script>
    <script src="@Html.RootPath()/Scripts/jquery.json.min.js" type="text/javascript"></script>
    <script src="@Html.RootPath()/Scripts/jquery.tabgroup.js" type="text/javascript"></script>
    <script src="@Html.RootPath()/Scripts/page/flow.addstatus.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $("#aTip").ligerTip();
            var tArtist2 = new TabClickGroup("next", "on", ["liBaseInfo", "liTranstionSet", "liOtherSet"], ["divBaseInfo", "divTranstionSet", "divOtherSet"]);
        });
    </script>
}
