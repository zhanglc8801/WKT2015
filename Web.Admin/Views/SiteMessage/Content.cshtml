@model WKT.Model.SiteMessageEntity
@{
    ViewBag.Title = "Content";
}
<link href="@Html.RootPath()/Content/ContributionInfo.css" rel="stylesheet" type="text/css" />
<div style="width: 99%; padding: 5px;">
    <table border="0" class="mainTable" cellpadding="0" cellspacing="1" align="center"
        width="100%" id="tbBody">
        <tr>
            <td class="title" colspan="2">
                消息详细信息
            </td>
        </tr>
        <tr>
            <td class="left" style="width:100px;">
                标题：
            </td>
            <td class="left">
                @Model.Title
            </td>
        </tr>
        <tr>
            <td class="left">
                发送时间：
            </td>
            <td class="right">
                @Model.SendDate.ToString("yyyy-MM-dd hh:mm")
            </td>
        </tr>
        <tr>
            <td class="left">
                信息内容：
            </td>
            <td class="left" style="WORD-WRAP: break-word;TABLE-LAYOUT: fixed;word-break:break-all;">
                @Html.Raw(Model.Content)
            </td>
        </tr>
    </table>
</div>
@section Scripts{
}
