@model WKT.Model.ContributionAuthorEntity
<meta http-equiv="Content-Type" content="text/html;charset=gb2312" />
<style type="text/css">
    img
    {
        vertical-align: middle;
    }
</style>
<link href="@Html.RootPath()/Content/ContributionInfo.css" rel="stylesheet" type="text/css" />
<form name="form1" method="post" id="form1">
<table border="0" class="mainTable" cellpadding="0" cellspacing="1" align="center" width="100%">
    <tr>
        <td class="left" style="width: 80px;">
            作者姓名：
        </td>
        <td class="right">
            @{
                if(Model.IsFirst)
                {
                    <span>@Model.AuthorName</span><span>(第一作者)</span>
                }
                else if(Model.IsCommunication)
                {
                    <span>@Model.AuthorName</span><span>(通讯作者)</span>
                }
                else
                {
                    <span>@Model.AuthorName</span>
                }   
             }
        </td>
    </tr>
    <tr>
        <td class="left" style="width: 80px;">
            第一作者：
        </td>
        <td class="right">
            @{
                if(Model.IsFirst)
                {
                    <span style="color:Green;">是</span>
                }
                else
                {
                    <span style="color:Red;">否</span>
                }   
             }
        </td>
    </tr>
    <tr>
        <td class="left" style="width: 80px;">
            通讯作者：
        </td>
        <td class="right">
            @{
                if(Model.IsCommunication)
                {
                    <span style="color:Green;">是</span>
                }
                else
                {
                    <span style="color:Red;">否</span>
                }     
             }
        </td>
    </tr>

    <tr>
        <td class="left" style="width: 80px;">
            Email：
        </td>
        <td class="right">
            @Model.Email
        </td>
    </tr>

    <tr>
        <td class="left" style="width: 80px;">
            联系电话：
        </td>
        <td class="right">
            @Model.Tel
        </td>
    </tr>

    <tr>
        <td class="left" style="width: 80px;">
            手机：
        </td>
        <td class="right">
            @Model.Mobile
        </td>
    </tr>

    <tr>
        <td class="left" style="width: 80px;">
            工作单位：
        </td>
        <td class="right">
            @Model.WorkUnit
        </td>
    </tr>

    <tr>
        <td class="left" style="width: 80px;">
            地址：
        </td>
        <td class="right">
            @Model.Address
        </td>
    </tr>

    <tr>
        <td class="left" style="width: 80px;">
            邮编：
        </td>
        <td class="right">
            @Model.ZipCode
        </td>
    </tr>

</table>
</form>

@section Scripts{



}

