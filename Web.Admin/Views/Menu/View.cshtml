@model WKT.Model.MenuEntity
<style type="text/css">
    .l-table-edit {font-size:14px;}
    .l-table-edit-td{ padding:4px;height:25px;}
</style>
<table cellpadding="0" cellspacing="0" class="l-table-edit">
	<tr>
		<td align="right" class="l-table-edit-td">菜单ID：</td>
		<td align="left" class="l-table-edit-td">@Model.MenuID</td>
		<td align="left"></td>
	</tr>
	<tr>
		<td align="right" class="l-table-edit-td">菜单名称：</td>
		<td align="left" class="l-table-edit-td">@Model.MenuName</td>
		<td align="left"></td>
	</tr>
	<tr>
		<td align="right" class="l-table-edit-td">父ID：</td>
		<td align="left" class="l-table-edit-td">@Model.PMenuID</td>
		<td align="left"></td>
	</tr>
    <tr>
		<td align="right" class="l-table-edit-td">URL：</td>
		<td align="left" class="l-table-edit-td">@Model.MenuUrl</td>
		<td align="left"></td>
	</tr>
	<tr>
		<td align="right" class="l-table-edit-td">图标：</td>
		<td align="left" class="l-table-edit-td"><img src="@Html.RootPath()@Model.IconUrl" alt="icon" /></td>
		<td align="left"></td>
	</tr>
	<tr>
		<td align="right" class="l-table-edit-td">排序：</td>
		<td align="left" class="l-table-edit-td">@Model.SortID</td>
		<td align="left"></td>
	</tr>
	<tr>
		<td align="right" class="l-table-edit-td">类型：</td>
		<td align="left" class="l-table-edit-td">@if(Model.MenuType == 1){ <img src='@Html.RootPath()/Content/icons/page.png' alt='页面' title='页面'/> }else{ <img src='@Html.RootPath()/Content/icons/button.png' alt='按钮' title='按钮'/>}</td>
		<td align="left"></td>
	</tr>
    <tr>
		<td align="right" class="l-table-edit-td">状态：</td>
		<td align="left" class="l-table-edit-td">@if(Model.Status == 1){ <img src='@Html.RootPath()/Content/icons/ok.png' alt='启用' title='启用'/> }else{ <img src='@Html.RootPath()/Content/icons/stop.png' alt='停用' title='停用'/>}</td>
		<td align="left"></td>
	</tr>
</table>
@section Scripts{

}