@model WKT.Model.IssueContentEntity
@{
    ViewBag.Title = @Html.CleanHtml(Model.Title) + "-" + Html.SiteName();
    ViewBag.Position = Model.Title;
}

<style type="text/css">
p
{
 font-size:12px;    
}
</style>

<div class="C_right">
    <h4 class="list_site">您当前的位置：<a href="/">首页</a> &gt;&gt; <a>@Model.ChannelName</a> &gt;&gt; <a>@Html.CleanHtmlNbsp(Model.Title)</a></h4>
    <div style=" font-weight:bold; color:#207d44; padding-top:10px; padding-left: 10px;">@Html.CleanHtml(Model.Title)</div><br />
    <div style="padding-left:10px;">
        <a href="/Stat/ViewPDF?ContentID=@Model.ContentID" target="_blank"><img src="../../Content/ZHYJY/img/ckqw.png" alt="查看全文" /></a>
        <a href="/Stat/FileDownload?ContentID=@Model.ContentID&fileName=@Html.CleanHtmlNbsp(Model.Title)" id="@Model.ContentID"><img src="../../Content/ZHYJY/img/xzqw.png" alt="下载全文" /></a>
        <a href="javascript:window.external.AddFavorite(''+document.location.href+'',''+document.title+'');"><img src="../../Content/ZHYJY/img/jrsc.png" /></a>
        <input type="hidden" id="hd" value="@Model.FilePath" />
        <input type="hidden" id="cid" value="@Model.ContentID" />
        <div style=" float:right; font-size:14px;"><a href="http://www.yywkt.cn/Content/Tools/AdbeRdr11000_zh_CN.exe">下载PDF阅读器</a></div><br /><br />
        
        <table style=" text-align:center; font-size:12px;">
            <tr style="text-align:left;">
                <td valign="middle" align="left" style="width:110px; font-weight:bold;">摘要：</td>
                <td style="line-height:28px; font-size:12px;">@Html.Raw(Model.Abstract)</td>
            </tr>
            <tr style="text-align:left; height:15px;"></tr>
            <tr style="text-align:left;">
                <td valign="top" style="font-weight:bold;">作者：</td>
                <td style=" font-size:12px;">@Html.Raw(Model.Authors)</td>
            </tr>
            <tr style="text-align:left; height:15px;"></tr>
            <tr style="text-align:left;">
                <td valign="top" style="font-weight:bold;">作者单位：</td>
                <td>@Html.CleanHtml(Model.WorkUnit)</td>
            </tr>
            <tr style="text-align:left; height:15px;"></tr>
            <tr style="text-align:left;">
                <td valign="top" style="font-weight:bold;">期刊：</td>
                <td><a href="@Html.SiteHome()" target="_blank">@Html.SiteName()</a></td>
            </tr>
            <tr style="text-align:left; height:15px;"></tr>
            <tr style="text-align:left;">
                <td valign="top" style="font-weight:bold;">年.卷(期):页码</td>
                <td>@Model.Year.@Model.Volume（@Model.Issue）：@Model.StartPageNum-@Model.EndPageNum</td>
            </tr>
            <tr style="text-align:left; height:15px;"></tr>
            <tr style="text-align:left;">
                <td valign="top" style="font-weight:bold;">中图分类号：</td>
                <td>@Html.CleanHtml(Model.CLC)</td>
            </tr>
            <tr style="text-align:left; height:15px;"></tr>
            <tr style="text-align:left;">
                <td valign="top" style="font-weight:bold;">文章编号：</td>
                <td>@Html.CleanHtml(Model.DOI)</td>
            </tr>
            <tr style="text-align:left; height:15px;"></tr>
            <tr style="text-align:left;">
                <td valign="top" style="font-weight:bold;">关键词：</td>
                <td>@Html.CleanHtml(Model.Keywords)</td>
            </tr>
            <tr style="height:15px;"></tr>
            <tr style="height:15px;"></tr>
            <tr style="text-align:left;">
                <td valign="top" colspan=2 style="font-weight:bold;"><h3 style="font-size: 14px;">欢迎阅读《@Html.SiteName()》！您是该文第<font>@Model.Hits</font>位读者！</h3></td>
                        
            </tr>
        </table>

    </div>
    
   

</div>

        <div>&nbsp;</div>       
