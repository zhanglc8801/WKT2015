            </div>
            
            <div class="office author journal">
                <h4><img src="/Content/ZHYJY/img/biao.png" /> 期刊检索</h4>
                <div class="content list">
                    <form action="" method="post" name="form1">
                        <select id="Year" style="width:80px;margin-top:8px;">
                            <option value="">全部年</option>
                            @foreach (WKT.Model.YearVolumeEntity item in Html.GetYearVolumeList())
                            { 
                                <option value="@item.Year">@(item.Year)年</option>
                            }
                        </select>
                        <select id="Issue" style="width:80px;margin-left:10px;margin-top:8px;;">
                            <option value="">全部期</option>
                            @foreach (WKT.Model.IssueSetEntity item in Html.GetIssueSetList())
                            { 
                                <option value="@item.Issue">No.@item.Issue</option>
                            }
                        </select>
                        <select id="MenuTree" style="width:170px;margin-top:8px;">
                            <option value="">请选择栏目</option>
                            @foreach (WKT.Model.JournalChannelEntity item in Html.GetJournalChannelList())
                            {
                                if (item.JChannelID != 20)
                                {
                                    <option value="@item.JChannelID">@item.ChannelName</option>
                                }

                            }
                        </select>
                        <input id="Title" value="标题" type="text" onfocus="TitleA()" onblur="TitleB()" />
                        <input id="Authors" value="作者姓名" type="text" onfocus="AuthorsA()" onblur="AuthorsB()" />
                        <input id="WorkUnit" value="作者单位" type="text" onfocus="WorkUnitA()" onblur="WorkUnitB()" />
                        <input id="Key" style="width:85px;" value="关键词" type="text" onfocus="KeyA()" onblur="KeyC()" />
                        <input style="width:73px;height:19px;cursor:pointer; margin-left:10px;background:url(../../Content/ZHYJY/img/login.jpg) no-repeat;border:0;" class="but" value="搜索" type="button" onclick="Search(3)" />
                    </form>
                </div>
            </div>
            <div class="office author link">
