	<!--center-->
    <div id="center" style="">
        <div class="C_left">
            <div class="office">
                <h4><img src="/Content/ZHYJY/img/biao.png" /> 在线办公</h4>
                <div class="content">
                    <a href="@Html.AdminUrl()/user/login?group=author" target="_blank"><img src="/Content/ZHYJY/img/niu1.png" /></a>
                    <a href="@Html.AdminUrl()/user/login?group=author" target="_blank"><img src="/Content/ZHYJY/img/niu2.png" /></a>
